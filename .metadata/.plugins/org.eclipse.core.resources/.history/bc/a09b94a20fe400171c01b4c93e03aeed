
public class Main {
		
	
	public static int number =  154;
	public static int count = 0;
	static String numberAsString = String.valueOf(number);
	static String stringLength = "";
	
		
	public static void main(String[] args) {
		printNumber();
		countNumber();
		threeNumbers(numberAsString);


	}
		
	public static void printNumber() {
		System.out.println(number);	
	}

	public static void countNumber() {
		while (number > 0) {
			
			count++;
			number = number/10;
			
		}
			System.out.println("Has " + count + " Numbers");
	
	}
	

	
	public static void threeNumbers(String numberAsString) {
		
		
		
		if (numberAsString.length() <= 3) {
			
			stringLength = numberAsString.substring(0, 2);	
			System.out.println("Short Scale: " + stringLength); 
			System.out.println("Long Scale: " + stringLength); 
		
		}	
		
		if(numberAsString.length() > 3 && numberAsString.length() <= 6) {
			stringLength = numberAsString.substring(3, 6);
			System.out.println("Short Scale: " + stringLength + " Thousand"); 
			System.out.println("Long Scale: " + stringLength + " Thousand"); 
			}
			
		 else {
			System.out.println("WRONG!");	
			}
	} 
	
}


	


